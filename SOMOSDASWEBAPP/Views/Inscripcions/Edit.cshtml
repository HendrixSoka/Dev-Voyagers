@model SOMOSDASWEBAPP.Models.Inscripcion

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Inscripcion</h4>
<hr />
<div >
    <div class="edit">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Fecha" style="display:block"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NroRecibo" style="display:block"></label>
                <input asp-for="NroRecibo" class="form-control" />
                <span asp-validation-for="NroRecibo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costo" style="display:block"></label>
                <input asp-for="Costo" class="form-control" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" style="display:block"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstudianteId" style="display:block"></label>
                <select asp-for="EstudianteId" class="form-control" asp-items="ViewBag.EstudianteId"></select>
                <span asp-validation-for="EstudianteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CursoId" style="display:block"></label>
                <select asp-for="CursoId" class="form-control" asp-items="ViewBag.CursoId"></select>
                <span asp-validation-for="CursoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
