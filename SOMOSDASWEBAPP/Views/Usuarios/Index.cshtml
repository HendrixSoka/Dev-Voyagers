@model IEnumerable<SOMOSDASWEBAPP.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: #fff;">Registros de Usuarios</h1>

<p>
    <a asp-action="Create" style="color: #fff;">Crear nuevo </a>
</p>
<form asp-action="Index" asp-controller="Usuarios" method="post">
    <div class="row">
        <div class="col-sm-10 form-group">
            <label for="search" class="control-label">Buscar por Nombre </label>
            <input name="search" id="search" class="form-control" />
        </div>
        <div class="col-sm-2">
            <button type="submit" class="btn btn-dark mt-4">Buscar</button>
        </div>
    </div>
</form>
<table >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="fila">
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rol)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
