@model SOMOSDASWEBAPP.Models.Curso

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Curso</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodCurso" />
            <div class="form-group">
                <label asp-for="Duracion" style="display:block"></label>
                <input asp-for="Duracion" class="form-control" />
                <span asp-validation-for="Duracion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tema" style="display:block"></label>
                <input asp-for="Tema" class="form-control" />
                <span asp-validation-for="Tema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Docente" style="display:block"></label>
                <input asp-for="Docente" class="form-control" />
                <span asp-validation-for="Docente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuposCurso" style="display:block"></label>
                <input asp-for="CuposCurso" class="form-control" />
                <span asp-validation-for="CuposCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" style="display:block"></label>
               
                <select asp-for="Tipo" class="form-control">
                    <option value="1">Curso</option>
                    <option value="2">Seminario</option>
                    <option value="3">Conferencia</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoFile" style="display:block"></label>
                <input asp-for="FotoFile" class="form-control" />
                <span asp-validation-for="FotoFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

