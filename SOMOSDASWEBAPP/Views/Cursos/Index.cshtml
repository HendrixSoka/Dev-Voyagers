@model IEnumerable<SOMOSDASWEBAPP.Models.Curso>

@{
    ViewData["Title"] = "Cursos";
}

<h1 style="color: #fff;">Registros de Cursos</h1>

<p>
    <a asp-action="Create" style="color: #fff;"> Crear nuevo </a>
</p>
<form asp-action="Index" asp-controller="Cursos" method="post">
    <div >
        <div >
            <label for="search" style="display:block" >Buscar por Codigo </label>
            <input name="search" id="search" class="form-control" />
        </div>
        <div >
            <button type="submit" >Buscar</button>
        </div>
    </div>
</form>
<table >
    <thead>
        <tr class="fila">
            <th>
                @Html.DisplayNameFor(model => model.CodCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CuposCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Docente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CuposCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                   
                    <a asp-action="Details" asp-route-id="@item.CodCurso">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.CodCurso">Editar</a> 
                    <a asp-action="Delete" asp-route-id="@item.CodCurso">Eliminar</a>
                    <div class="a2a_kit a2a_kit_size_32 a2a_default_style">

                        <a class="a2a_button_facebook"></a>
                        <a class="a2a_button_whatsapp"></a>
                        <a class="a2a_button_x"></a>
                    </div>
                    <script async src="https://static.addtoany.com/menu/page.js"></script>
            </td>
        </tr>
}
    </tbody>
</table>
